{% extends 'backOffice/base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Inscriptions</li>
{% endblock breadcrumb %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Liste des inscriptions</h3>
                </div>

                {{ render(controller('AppBundle:BackOffice/RegistrationBack:searchForm')) }}

                <!-- modal pour show -->
                <div class="modal fade" id="myModalShow" role="dialog" tabindex="-1"
                     aria-labelledby="demo-default-modal" aria-hidden="true">
                </div>
                <!-- fin modal show -->

                <!-- modal pour valider -->
                <div class="modal fade" id="myModalValidate" role="dialog" tabindex="-1"
                     aria-labelledby="demo-default-modal" aria-hidden="true">
                </div>
                <!-- fin modal valider -->

                <div class="panel-body">

                    <main>
                        <div id="load-ajax">
                            <table
                                    class="table table-hover table-vcenter toggle-circle table-striped breakpoint footable">
                                <caption>Resultat: {{ entities.getTotalItemCount }} </caption>
                                <thead>
                                <tr>
                                    <th class="col-lg-3">Nom et Pr√©nom</th>
                                    <th class="col-lg-1">Email</th>
                                    <th class="col-lg-1">Mobile</th>
                                    <th class="col-lg-1">Pays</th>
                                    <th class="col-lg-1">Ville</th>
                                    <th class="col-lg-1">Inscri le</th>
                                    <th class="col-lg-2 text-center" data-sort-ignore="true">
                                        <span class="text-right">Action</span>
                                    </th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr id="new-element"></tr>
                                {% for entity in entities %}
                                    {{ include('backOffice/Registration/tr.html.twig') }}
                                {% endfor %}
                                </tbody>
                            </table>

                            <div class="dataTables_paginate paging_simple_numbers">
                                {{ knp_pagination_render(entities) }}
                            </div>

                            <div id="divLoading">
                                <i class="fa fa-spinner fa-pulse text-primary fa-20x" aria-hidden="true"></i>
                            </div>

                        </div>
                    </main>
                </div>
            </div>
        </div>
    </div>
{% endblock %}