<a href="{{ route }}" data-entity-id="{{ id }}" id="disactivate-{{ id }}"
   class="add-tooltip tooltip-error action-disactivate"
   data-placement="top" data-toggle="tooltip" data-original-title="Cliquer pour ne pas publier"
        {% if state %} style="display: inline"  {% else %} style="display: none" {% endif %}>
    <i class="fa fa-unlock text-success bigger-150"></i>
</a>

<a href="{{ route }}" data-entity-id="{{ id }}" id="activate-{{ id }}"
   class="add-tooltip tooltip-success action-activate"
   data-placement="top" data-toggle="tooltip" data-original-title="Cliquer pour publier"
        {% if state == false %} style="display: inline" {% else %} style="display: none" {% endif %}>
    <i class="fa fa-lock text-danger bigger-150"></i>
</a>

<span id="spiner-{{ id }}" style="display: none">
    <i class="fa fa-spinner fa-pulse text-primary fa-2x" aria-hidden="true"></i>
</span>
<span class="hidden">{{ state }}</span>
