{% extends 'backOffice/base.html.twig' %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Statistiques</li>
{% endblock breadcrumb %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Statistiques</h3>
                </div>

                <div class="panel-body">

                    <main>
                        <div class="col-lg-8">
                            <table
                                    class="table table-hover table-vcenter toggle-circle table-striped breakpoint footable">
                                <thead>
                                <tr>
                                    <th class="col-lg-2 text-right">Titre</th>
                                    <th class="col-lg-2 text-left">Valeur</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="text-right">Total annonces</td>
                                    <td class="text-left"><strong>{{ countProperties }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-right">Total vues annonces</td>
                                    <td class="text-left"><strong>{{ countViews }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-right">Total annonces validées</td>
                                    <td class="text-left"><strong>{{ countPropertiesValid }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-right">Total annonces en attente</td>
                                    <td class="text-left"><strong>{{ countPropertiesWaiting }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-right">Total annonces rejetées</td>
                                    <td class="text-left"><strong>{{ countPropertiesRejected }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-right">Total utilisateurs</td>
                                    <td class="text-left"><strong>{{ countUsers }}</strong></td>
                                </tr>
                            </table>

                        </div>
                    </main>
                </div>
            </div>
        </div>
    </div>
{% endblock %}