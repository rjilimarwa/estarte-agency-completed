{% extends 'backOffice/base.html.twig' %}

{% block page_title %}Ecrire un message{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li class="active">Ecrire un message</li>
{% endblock breadcrumb %}

{% block body %}

    {# ne pas oublier class tab-base#}
    <div class="tab-base">
        <!--Nav Tabs-->
        <ul class="nav nav-tabs">
            <li>
                <a href="{{ path('back_message_sent_list') }}" aria-expanded="true">Recus <span
                            class="badge badge-purple"></span></a>
            </li>
            <li>
                <a href="{{ path('back_message_sent_list') }}"
                   aria-expanded="false">Envoy√©s <span
                            class="badge badge-purple"></span>
                </a>
            </li>
            <li class="active">
                <a data-toggle="tab" href="{{ path('back_message_sent_new') }}" aria-expanded="false">Ecrire</a>
            </li>
        </ul>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Envoyer un email</h3>
                    </div>


                    {% form_theme form 'backOffice/form/fields_vertical.html.twig' %}

                    {% include 'backOffice/form/form_errors.html.twig' %}

                    <form role="form" action="" method="post">

                        <div class="panel-body">

                            {{ form_widget(form.email) }}
                            {{ form_widget(form.subject) }}
                            {{ form_widget(form.message) }}
                        </div>
                        {{ form_rest(form) }}


                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <!--Send button-->
                                    <button id="mail-send-btn" type="submit" class="btn btn-success btn-labeled pull-right">
                                        <span class="btn-label"><i class="fa fa-paper-plane"></i></span> Envoyer
                                    </button>
                                </div>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

{% endblock body %}





